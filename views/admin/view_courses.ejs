<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>View Courses</title>
    <link rel="stylesheet" href="/css/header.css" />
    <script
      src="https://kit.fontawesome.com/9ca9aa7819.js"
      crossorigin="anonymous"
    ></script>
    <style>
      body {
        font-family: "Open Sans", sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      td a {
        text-decoration: underline;
        color: #001939;
        padding: 5px;
      }
      td a:hover,
      td a:focus {
        background-color: red;
        color: #ffffff;
        cursor: pointer;
        text-decoration: none;
      }

      td button {
        text-decoration: underline;
        border: none;
        color: black;
        margin: 0;
        padding: 5px;
        font-size: 1rem;
        background-color: transparent;
        margin-left: 6px;
      }
      td button:hover {
        text-decoration: none;
        background-color: red;
        color: #ffffff;
        cursor: pointer;
      }

      .main-heading {
        width: 100%;
      }
      .main-heading h1 {
        margin: 5px 10px;
        padding-top: 15px;
      }

      .main-heading a {
        position: relative;
        left: 84%;
        margin-right: 10px;
        text-decoration: underline;
        color: #001939;
        font-weight: 500;
        padding: 5px;
        transition: all 0.2 ease-in-out;
      }
      .main-heading a:hover {
        text-decoration: none;
        background-color: #8ab2da28;
        border-radius: 1px;
      }
      .main-heading a i {
        margin-right: 6px;
      }

      table {
        margin: 0 auto;
        width: 95%;
        border-collapse: collapse;
      }
      th,
      td {
        padding: 5px 5px;
        font-size: 1.05rem;
        border: 1px solid #424242;
        text-align: left;
      }
      th {
        padding: 10px 0;
        text-align: center;
        background-color: #f2f2f2;
      }
      tr:hover {
        background-color: #f2f2f2;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      .form-div form {
        display: flex;
        gap: 5px;
        justify-content: center;
        align-items: center;
        margin: 16px;
      }

      .form-div input[type="text"] {
        display: block;
        width: 320px;
        height: 30px;
        padding: 5px;
        border: 2px solid #9a9a9a;
        border-radius: 5px;
        font-size: 18px;
      }

      .form-div input[type="text"]:focus {
        box-shadow: 0px 0px 8px 0.5px rgba(12, 12, 12, 0.4);
      }

      .form-div button {
        height: 35px;
        border: 1px solid #585858;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: all 0.1s ease;
      }
      .form-div button:hover {
        background-color: #d2d2d2;
      }
    </style>
    <script>
      if ("<%= message %>") {
        alert("<%= message %>");
      }
    </script>
  </head>
  <body>
    <%- include ("../header.ejs") %>

    <div class="main-heading">
      <h1>Courses List</h1>
      <a href="/admin/dashboard" class="back-link"
        ><i class="fa-solid fa-arrow-left"></i>Back</a
      >
    </div>

    <div class="form-div print-hidden">
      <form action="/admin/view-courses/search" method="POST">
        <input
          type="text"
          name="search_query"
          placeholder="Search by Department or Semester"
        />
        <button type="submit">Search</button>
      </form>
    </div>
    <% if (courses.length === 0){ %>

    <p style="text-align: center; margin-top: 46px; font-size: 20px">
      No Course Found
    </p>

    <% } else { %>
    <table>
      <thead>
        <tr>
          <th>S.No.</th>
          <th>Course Code</th>
          <th>Course Name</th>
          <th>Course Type</th>
          <th>Department</th>
          <th>Semester</th>
          <th>Credits</th>
          <th>Min Marks</th>
          <th>Max Marks</th>
          <th class="print-hidden">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% let serialNo = 1; %> <% courses.forEach(course => { %>
          <td style="width: 30px"><%= serialNo++ %>.</td>
          <td><%= course.course_code %></td>
          <td><%= course.course_name %></td>
          <td><%= course.course_type %></td>
          <td><%= course.department %></td>
          <td><%= course.semester %></td>
          <td><%= course.credits %></td>
          <td><%= course.min_marks %></td>
          <td><%= course.max_marks %></td>
          <td class="print-hidden">
            <a href="/admin/edit-course/<%= course.course_code %>">Edit</a>
            <form
              action="/admin/delete/<%= course.course_code %>"
              method="post"
              style="display: inline"
            >
              <button type="submit" onclick="return confirmMessage()">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>

    <script>
      function confirmMessage() {
        const confirmation = confirm(
          "Are you sure to Delete all details related to this course?"
        );

        // If user confirms, submit the form
        if (confirmation) {
          return true;
        } else {
          return false;
        }
      }
    </script>
  </body>
</html>
